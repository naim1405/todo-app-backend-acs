generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Refresh_Token {
  id       String  @id @default(uuid())
  token    String
  isActive Boolean
}

model User {
  id       String @id @default(uuid())
  name     String
  email    String @unique
  password String
  todoList todo[]
}

model todo {
  id     String @id @default(uuid())
  title  String
  details String
  isDone Boolean
  userId String
  user   User   @relation(fields: [userId], references: [id])
}
